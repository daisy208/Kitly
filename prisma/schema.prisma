// This is your standard setup
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// This is your main Session model
model Session {
  id      String    @id
  shop    String
  state   String
  isOnline Boolean   @default(false)
  scope   String?
  expires DateTime?
  accessToken String
  userId  BigInt?

  @@index([shop])
}

